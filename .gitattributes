# Normaliza finais de linha
* text=auto eol=lf

# Arquivos do projeto
*.php text eol=lf
*.md  text eol=lf
*.xml text eol=lf
*.neon text eol=lf

# Binários
*.pdf binary
*.der binary

# Certificados
*.pem text eol=lf

# Ignora diretórios em export (opcional)
vendor/ export-ignore
.github/ export-ignore
.docker/ export-ignore
scripts/ export-ignore
